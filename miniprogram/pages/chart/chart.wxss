/* pages/chart/chart.wxss */

page {
    background-color: #f7f7f7;
}

#mychart-dom-bar {
    width: 100vw;
    height: 100vh;
    margin-top: -200rpx;
}



.picker-pos {
    margin-top: -130rpx;
    margin-left: 150rpx;
    color: blueviolet;
}

.current-date {
    display: flex;
    width: 100%;
    background-color: aqua;
    height: 70rpx;
    line-height: 70rpx;
}

.detail-popup {
    position: relative;
}

.detail-tabs {
    width: 70vw;
    margin: auto;
}

.detail-btn {
    width: 100vw;
    display: flex;
    justify-content: space-between;
    position: absolute;
    left: 0;
    top: 0;
}

.detail-btn-item1 {
    margin-left: 30rpx;
    margin-top: 20rpx;
}

.detail-btn-item2 {
    margin-right: 30rpx;
    margin-top: 20rpx;
}

.detail-picker {
    padding-top: 50rpx;
}

.popup-datetime {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.popup-datetime-range {
    display: flex;
    margin-top: 50rpx;
}

.popup-detetime-btn {
    text-align: center;
    margin-top: 80rpx;
}

.chart-progress {
    width: 80vw;
    margin: auto;
    margin-top: -20vh;
}

.chart-progress-item {
    margin-bottom: 50rpx;
}


.chart-progress-top {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}