.key-container {
    margin-top: 50rpx;
    width: 100%;
    display: flex;
    display: -webkit-flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
}

.key-container .keyboard {
    position: fixed;
    bottom: 0;
    left: 0;
    height: 360rpx;
    width: 100%;
    background-color: #fff;
}

.key-container .keyboard .key-row {
    display: flex;
    display: -webkit-flex;
    position: relative;
    height: 90rpx;
    line-height: 90rpx;
}

.key-container .keyboard .key-row::before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1rpx;
    border-top: 1rpx solid #d5d5d6;
    color: #d5d5d6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}

.key-container .keyboard .key-cell {
    flex: 1;
    -webkit-box-flex: 1;
    text-align: center;
    position: relative;
}

.key-container .keyboard .key-cell::after {
    content: "";
    position: absolute;
    overflow: hidden;
    top: 0;
    right: 0;
    bottom: 0;
    height: 200%;
    border-right: 1rpx solid #d5d5d6;
    color: #d5d5d6;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
    -moz-transform: scaleY(0.5);
    -ms-transform: scaleY(0.5);
    -o-transform: scaleY(0.5);
}

.key-container .keyboard .key-cell:nth-last-child(1)::after {
    border-right: 0;
}

.key-container .keyboard .disabled {
    background: rgba(0, 0, 0, 0.2);
}

.key-container .keyboard .key-confirm {
    position: absolute;
    text-align: center;
    height: 180rpx;
    width: 25%;
    line-height: 180rpx;
    background: #fff;
    z-index: 5;
    right: 0;
    bottom: 1rpx;
}

.key-container .keyboard .key-clear {
    position: absolute;
    text-align: center;
    height: 180rpx;
    width: 25%;
    line-height: 180rpx;
    background: #fff;
    z-index: 5;
    right: 0;
    top: 1rpx;
}

